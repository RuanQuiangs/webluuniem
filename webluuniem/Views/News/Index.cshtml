@model IEnumerable<webluuniem.Models.Post>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    img{
        border:solid 2px white;
    }
        img:hover {
            border: solid 2px red;
        }
</style>

<div class="content-wrapper">
    <div class="container">

        <div class="card my-3">
            <div class="card-body">
                <ol class="breadcrumb float-left">
                    <li class="breadcrumb-item"><a href="~/Home/Index">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a href="~/News/Index">Tin tức</a></li>

                </ol>
            </div> <!-- card-body .// -->
        </div>

        <div class="row" data-aos="fade-up ">
            <div class="col-xl-8 stretch-card grid-margin my-2">
                
                @foreach (var item in Model.Take(1))
                {
                    
                    <div class="position-relative bg-white" >
                        <a href="@Url.Action("Details","News", new {@slug = @item.Slug})">
                            <img src="~/Content/images/items/@item.Image"
                                 alt="banner"
                                 class="container"/>
                                
                          </a>
                            <div class="banner-content p-4">
                                <div class="badge badge-danger fs-12 font-weight-bold mb-3 ">
                                    Tin nổi bật
                                </div>
                                <a href="@Url.Action("Details","News", new {@slug = @item.Slug})">
                                    <h1 class="mb-2">
                                        @item.PostTitle
                                    </h1>
                                </a>
                                    <p class="fs-15">
                                        @item.PostText.Substring(0, 700) ..<a class ="text-danger" href="@Url.Action("Details","News", new {@slug = @item.Slug})">Xem thêm</a>
                                    </p>
                                    <div class="fs-12">
                                        <span class="mr-2">Đăng lúc:</span>@item.CreateDate
                                    </div>
                                 </div>
                    </div>
                        
                }

            </div>
            <div class="col-xl-4 stretch-card grid-margin py-2">
                <div class="card ">
                    <div class="card-body ">
                        <h2 class=" text-warning">Bài viết mới</h2>

                        @foreach (var item in Model.Take(3))
                        {
                            
                                <div class="d-flex border-bottom-blue pt-3 pb-4 align-items-center justify-content-between">
                                    <div class="pr-3">
                                        <a href="@Url.Action("Details","News", new {@slug = @item.Slug})">
                                            <h5>@item.PostTitle</h5>
                                        </a>
                                            <p class="fs-15">
                                                @item.PostText.Substring(0, 200) ..<a href="">Xem thêm</a>
                                            </p>
                                            <div class="fs-12">
                                                <span class="mr-2">Đăng lúc:</span>@item.CreateDate
                                            </div>
                                    </div>
                                    <div class="rotate-img">
                                        <a href="@Url.Action("Details","News", new {@slug = @item.Slug})">
                                            <img src="~/Content/images/items/@item.Image"
                                                 alt="thumb"
                                                 class="img-fluid img-lg" />
                                        </a>
                                    </div>
                                </div>
                                
                                }
                        </div>
                </div>
            </div>
        </div>
        <div class="row py-2" data-aos="fade-up ">
            <div class="col-lg-3 stretch-card grid-margin">
                <div class="card container">
                    <div class="card-body">
                        <h2>Tác giả</h2>
                        <ul class="vertical-menu">
                            @foreach (var item in Model.Take(1))
                            {
                                <li><a href="#">@item.UserID</a></li>
                            }

                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-9 stretch-card grid-margin">
                <div class="card py-2">
                    <div class="card-body">
                        @foreach (var item in Model.Take(3))
                        {
                                <div class="row">
                                    <div class="col-sm-4 grid-margin">
                                        <div class="position-relative">
                                            <div class="rotate-img">

                                                <a href="@Url.Action("Details","News", new {@slug = @item.Slug})">
                                                    <img src="~/Content/images/items/@item.Image"
                                                         alt="thumb"
                                                         class="img-fluid" />
                                                </a>
                                            </div>
                                            <div class="badge-positioned">
                                                <span class="badge badge-danger font-weight-bold">Tin nhanh</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-8  grid-margin">
                                        <h2 class="mb-2 font-weight-600">

                                            <a href="@Url.Action("Details","News", new {@slug = @item.Slug})">
                                                @item.PostTitle
                                            </a>
                                        </h2>
                                        <div class="fs-13 mb-2">
                                            <span class="mr-2">Đăng: </span>@item.CreateDate
                                        </div>
                                        <p class="mb-0">
                                            @item.PostText.Substring(0, 200) ..<a href="@Url.Action("Details","News", new {@slug = @item.Slug})" class="text-danger">Xem thêm</a>
                                        </p>
                                    </div>
                                </div>
                                
                                }

                        </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="content-wrapper py-2">
    <div class="container">
        <div class="col-sm-12">
            <div class="card" data-aos="fade-up">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <h1 class="font-weight-600">
                                Thông tin
                            </h1>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-8">
                            @foreach (var item in Model.Take(8))
                            {
                                
                                    <div class="row py-2">
                                        <div class="col-sm-4 grid-margin">
                                            <div class="rotate-img">
                                                <a href="@Url.Action("Details","News", new {@slug = @item.Slug})">
                                                    <img src="~/Content/images/items/@item.Image"
                                                         alt="banner"
                                                         class="img-fluid" />
                                                </a>
                                            </div>
                                        </div>
                                        <div class="col-sm-8 grid-margin">
                                            <a href="@Url.Action("Details","News", new {@slug = @item.Slug})">
                                                <h2 class="font-weight-600 mb-2">
                                                    @item.PostTitle
                                                </h2>
                                            </a>
                                                <p class="fs-13 text-muted mb-0">
                                                    <span class="mr-2">Đăng: </span>@item.CreateDate
                                                </p>
                                                <p class="fs-15">
                                                    @item.PostText.Substring(0, 200) ..<a href="@Url.Action("Details","News", new {@slug = @item.Slug}) " class=" text-danger">Xem thêm</a>
                                                </p>
                                        </div>
                                    </div>
                                
                                 }
                            </div>
                        <div class="col-lg-4">
                            <h2 class="mb-4 text-primary font-weight-600">
                                Mới cập nhật
                            </h2>
                            @foreach (var item in Model.Take(5))
                            {

                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="border-bottom pb-4 pt-4">
                                            <div class="row">
                                                <div class="col-sm-8">
                                                    <a href="@Url.Action("Details","News", new {@slug = @item.Slug})">
                                                        <h5 class="font-weight-600 mb-1">
                                                           @item.PostTitle
                                                        </h5>
                                                    </a>
                                                        <p class="fs-13 text-muted mb-0">
                                                            <span class="mr-2">Đăng: </span>@item.CreateDate
                                                        </p>
</div>
                                                <div class="col-sm-4">
                                                    <div class="rotate-img">
                                                        <img src="~/Content/images/items/@item.Image"
                                                             alt="banner"
                                                             class="img-fluid" />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        <div class="trending">
                            <h2 class="mb-4 text-primary font-weight-600">
                                Nổi bật
                            </h2>
                            @foreach (var item in Model.Take(3))
                            {
                                <div class="mb-4">
                                    <div class="rotate-img">
                                        <a href="@Url.Action("Details","News", new {@slug = @item.Slug})">
                                            <img src="~/Content/images/items/@item.Image"
                                                 alt="banner"
                                                 class="img-fluid" />
                                        </a>
                                    </div>
                                    <h3 class="mt-3 font-weight-600">
                                        <a href="@Url.Action("Details","News", new {@slug = @item.Slug})">
                                            @item.PostTitle
                                            </a>
</h3>
                                    <p class="fs-13 text-muted mb-0">
                                        <span class="mr-2">Đăng: </span>@item.CreateDate
                                    </p>
                                </div>
                            }
                            </div>
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- main-panel ends -->
<!-- container-scroller ends -->
