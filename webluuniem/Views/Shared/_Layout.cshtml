<!DOCTYPE HTML>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="pragma" content="no-cache" />
    <meta http-equiv="cache-control" content="max-age=604800" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Bootstrap e-commerce html template similar to Alibaba">
    <meta name="keywords" content="Online template, shop, theme, template, html, css, bootstrap 4">

    <title>Website Bán hàng lưu niệm</title>

    <link href="~/Content/images/logo.ico" rel="shortcut icon" type="image/x-icon">

    <!-- jQuery -->
    <script src="~/Content/js/jquery-2.0.0.min.js" type="text/javascript"></script>

    <!-- Bootstrap4 files-->
    <script src="~/Content/js/bootstrap.bundle.min.js" type="text/javascript"></script>
    <link href="~/Content/css/bootstrap.css" rel="stylesheet" type="text/css" />

    <!-- Font awesome 5 -->
    <link href="~/Content/fonts/fontawesome/css/all.min.css" type="text/css" rel="stylesheet">

    <!-- custom style -->
    <link href="~/Content/css/ui.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/responsive.css" rel="stylesheet" type="text/css" />

    <!-- custom javascript -->
    <script src="~/Content/js/script.js" type="text/javascript"></script>
    <style>
        .bi:hover {
            color:black;
        }
        .fab{
            width: 30px;
            height:30px;
        }
        .img-avatar{
            border: solid 1px blue;
            width: 60px;
            height: auto;
            border-radius: 50%;
        }
            .img-avatar:hover {
                border: solid 2px red;
            }
    </style>
</head>

<body>

    <b class="screen-overlay"></b>
    <header class="section-header">
        <section class="header-main border-bottom bg-white">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-xl-2 col-lg-3 col-md-12">
                        <a href="~/home/index" class="brand-wrap" >
                            <img class="logo" src="~/Content/images/logo.svg" /> <a href="~/home/index" style="color:orange; font-size:25px;">LUUNIEMS</a>
                        </a> <!-- brand-wrap.// -->
                    </div>
                    <div class="col-xl-6 col-lg-5 col-md-6">
                        <form action="~/Product/Search" class="search-header">
                            <div class="input-group w-100">
                                <input type="search" class="form-control" placeholder="Nhập vào đây để tìm sản phẩm..." name="searchString">


                                <div class="input-group-append">
                                    <button class="btn btn-primary" type="submit">
                                        <i class="fa fa-search"></i> Tìm Kiếm
                                    </button>
                                </div>
                            </div>
                        </form> <!-- search-wrap .end// -->
                    </div> <!-- col.// -->
                    <div class="col-xl-4 col-lg-4 col-md-6">
                        <div class="widgets-wrap float-md-right">
                            @if (Session["UserID"] != null)
                            {
                                <div class="widget-header mr-3">
                                    <a href="Home/Profile" class="widget-view ">
                                        <div style="width: 50px; height: 50px;">

                                            <img src="~/Content/images/avatars/@Session["Avatar"]" class="img-avatar" title="Trang cá nhân" />
                                        </div>

                                    </a>
                                </div>
                                <div class="widget-header mr-3">
                                    <a href="~/Home/Notify" class="widget-view">
                                        <div class="icon-area">
                                            <i class="fa fa-comment-dots"></i>
                                            <span class="notify">1</span>
                                        </div>
                                        <small class="text"> Thông báo </small>
                                    </a>
                                </div>

                                <div class="widget-header">
                                    <a href="~/Order/Cart" class="widget-view">
                                        <div class="icon-area">
                                            <i class="fa fa-shopping-cart"></i>
                                            <i class="fa-solid fa-pen-to-square"></i>
                                        </div>
                                        <small class="text"> Giỏ hàng </small>
                                    </a>
                                </div>
                                if (@Session["IsAdmin"].ToString() == true.ToString())
                                {
                                    <div class="widget-header mr-3">
                                        <a href="~/Admin/Home" class="widget-view">
                                            <div class="icon-area">
                                                <i class="fa fa-toolbox"></i>
                                            </div>
                                            <small class="text">Quản trị</small>
                                        </a>
                                    </div>
                                }

                            }
                            else
                            {
                                <div class="widget-header mr-3">
                                    <a href="~/Home/Login" class="widget-view">
                                        <div class="icon-area">
                                            <i class="fa fa-key"></i>
                                        </div>
                                        <small class="text">Đăng Nhập</small>
                                    </a>
                                </div>
                                <div class="widget-header">
                                    <a href="~/Home/Register" class="widget-view">
                                        <div class="icon-area">
                                            <i class="fa fa-feather"></i>
                                        </div>
                                        <small class="text"> Đăng Kí </small>
                                    </a>
                                </div>
                                <div class="widget-header mr-3">
                                    <a href="~/Home/Login" class="widget-view">
                                        <div class="icon-area">
                                            <i class="fa fa-comment-dots"></i>
                                            
                                        </div>
                                        <small class="text"> Thông báo </small>
                                    </a>
                                </div>

                                <div class="widget-header">
                                    <a href="~/Home/Login" class="widget-view">
                                        <div class="icon-area">
                                            <i class="fa fa-shopping-cart"></i>
                                            <i class="fa-solid fa-pen-to-square"></i>
                                        </div>
                                        <small class="text"> Giỏ hàng </small>
                                    </a>
                                </div>
                            }




                        </div> <!-- widgets-wrap.// -->
                    </div> <!-- col.// -->
                </div> <!-- row.// -->
            </div> <!-- container.// -->
        </section> <!-- header-main .// -->



        <nav class="navbar navbar-main navbar-expand-lg border-bottom>
            <div class="container">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#main_nav" aria-controls="main_nav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="main_nav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="~/Home/Index"><strong>TRANG CHỦ</strong></a>
                        </li>
                        <li class="nav-item">
                            <a href="~/Category/Index" class="nav-link" data-toggle="dropdown">DANH MỤC</a>
                           
                        </li>
                       
                        <li class="nav-item">
                            <a class="nav-link" href="~/Order/Offers">KHUYẾN MÃI</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/Post/Index">TIN TỨC</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~Home/Contact">LIÊN HỆ</a>
                        </li>
                    </ul>
                  
                </div> <!-- collapse .// -->
            </div> <!-- container .// -->
        </nav>

    </header> <!-- section-header.// -->
    
    @RenderBody()

    <!-- ========================= FOOTER ========================= -->
    <footer class="section-footer bg-dark">
        <div class="container">
            <section class="footer-top padding-y-lg text-white">
                <div class="row">
                    
                    <aside class="col-md-2">
                        <h2 class="title col-md">Social</h2>
                    </aside>
                    <aside class="col-md-2">
                        <ul class="list-unstyled">
                            <li><a href="#"> <i class="fab fa-facebook"></i> Facebook </a></li>
                        </ul>
                    </aside>
                    <aside class="col-md-2">
                        <ul class="list-unstyled">
                            <li><a href="#"> <i class="fab fa-twitter"></i> Twitter </a></li>
                        </ul>
                    </aside>
                    <aside class="col-md-2">
                        <ul class="list-unstyled">
                            <li><a href="#"> <i class="fab fa-instagram"></i> Instagram </a></li>
                        </ul>
                    </aside>
                    <aside class="col-md-2">
                        <ul class="list-unstyled">
                            <li><a href="#"> <i class="fab fa-youtube"></i> Youtube </a></li>
                        </ul>
                    </aside>
                    <aside class="col-md-2">
                        <ul class="list-unstyled">
                            <li><a href="#"> <i class="fab fa-github"></i> GitHub </a></li>
                        </ul>
                    </

                </div> <!-- row.// -->
            </section>	<!-- footer-top.// -->

            <section class="footer-bottom text-center">
                <p class="text-muted"> &copy 2022 by luuniems </p>
                <br>
            </section>
        </div><!-- //container -->
    </footer>
    <!-- ========================= FOOTER END // ========================= -->



</body>
</html>