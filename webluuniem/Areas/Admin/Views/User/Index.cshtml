@model IEnumerable<webluuniem.Models.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>

    @Html.ActionLink("Create New", "Create")
</p>
<h4 style="color:red;">@ViewData["error"]</h4>
<table class="table">

    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Avatar)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsAdmin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreationTime)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            <img src="~/Content/images/avatars/@Html.DisplayFor(modelItem => item.Avatar)" style="width:50px; height:50px;" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsAdmin)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.CreationTime)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.UserId }) |
            @Html.ActionLink("Details", "Details", new { id = item.UserId }) |
            <a href="~/Admin/User/Delete?id=@item.UserId" onclick="return confirm('Bạn có chắc muốn xóa tài khoản này. Tài khoản đã bị xóa không thể đăng nhập')">Xóa</a>

        </td>
    </tr>
}

</table>
